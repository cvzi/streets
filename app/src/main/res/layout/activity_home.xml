<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <Button
                android:text="View Map"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="36dp"
                tools:layout_editor_absoluteX="58dp" android:id="@+id/buttonViewMap"
                android:onClick="goToViewMapActivity" tools:text="View Map"/>
        <Button
                android:text="Download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="36dp"
                tools:layout_editor_absoluteX="58dp" android:id="@+id/buttonDownload"
                android:onClick="goToDownloadActivity" tools:text="Download"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>